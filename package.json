{
  "name": "@ralacerda/neverthrow2",
  "version": "0.3.1",
  "description": "Stop throwing errors, and instead return Results!",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "local-ci": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run format && pnpm run build",
    "test": "vitest run && pnpm run test-types",
    "test-types": "tsc --noEmit -p ./tests/tsconfig.tests.json",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --write 'src/**/*.ts?(x)' && pnpm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf ./dist ./tmp",
    "build": "pnpm run clean && tsdown src/index.ts && attw --profile esm-only --pack . ",
    "prepublishOnly": "pnpm run build",
    "release": "changeset publish",
    "version": "changeset version && pnpm i --lockfile-only"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ralacerda/neverthrow2.git"
  },
  "author": "Renato Lacerda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ralacerda/neverthrow2/issues"
  },
  "homepage": "https://github.com/ralacerda/neverthrow2#readme",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.31.0",
    "@types/node": "^18.19.39",
    "eslint": "9.31.0",
    "prettier": "2.2.1",
    "testdouble": "3.20.2",
    "ts-toolbelt": "9.6.0",
    "tsdown": "^0.12.9",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^2.1.3"
  },
  "keywords": [
    "typescript",
    "functional",
    "fp",
    "error"
  ],
  "engines": {
    "node": ">=18"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.24.0"
  },
  "packageManager": "pnpm@10.13.1"
}
