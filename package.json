{
  "name": "neverfall",
  "version": "1.0.0",
  "description": "Stop throwing errors, and instead return Results!",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "require": {
      "default": "./dist/index.cjs",
      "types": "./dist/index.d.cts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "local-ci": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run format && pnpm run build",
    "test": "vitest run && pnpm run test-types",
    "test-types": "tsc --noEmit -p ./tests/tsconfig.tests.json",
    "lint": "eslint",
    "format": "prettier --write 'src/**/*.ts' && eslint --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf ./dist ./tmp",
    "build": "pnpm run clean && tsdown --format cjs --format esm src/index.ts && attw --pack .",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ralacerda/neverthrow2.git"
  },
  "author": "Renato Lacerda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ralacerda/neverthrow2/issues"
  },
  "homepage": "https://github.com/ralacerda/neverthrow2#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^22.16.4",
    "eslint": "9.31.0",
    "prettier": "3.6.2",
    "testdouble": "3.20.2",
    "ts-toolbelt": "9.6.0",
    "tsdown": "^0.12.9",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "typescript",
    "functional",
    "fp",
    "error"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "changelogen": "^0.6.2"
  }
}
